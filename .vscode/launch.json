	"version": "0.2.0",
	"configurations": [
		{
			"name": "Build & Debug(MacOS)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/doom",
			"preLaunchTask": "Build debug(MacOS)",
			"args": ["${workspaceFolder}/640x400.tga"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "lldb"
		},
		{
			"name": "Debug(MacOS)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/doom",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "lldb"
		},
		{
			"name": "Build & Debug(Linux)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/doom",
			"preLaunchTask": "Build debug(Linux)",
			"args": [ "${workspaceFolder}/build/assets/maps/test.map"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Debug(Linux)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/doom",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
